<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_data"
            android:padding="80dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="旅行预订系统"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/travel"
            />

        <TextView
            android:id="@+id/tv_2"
            android:padding="5dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="管理员模式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2d70f5"
            />

        <TextView
            android:id="@+id/tv3"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            style="@android:style/ButtonBar"
            >

            <Button
                android:id="@+id/delete_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="删除航班"
                android:layout_weight="1" />
            <Button
                android:id="@+id/delete_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="删除大巴"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/delete_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"
                android:text="删除宾馆" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv4"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/update_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:onClick="update_flight"
                android:text="更改航班信息"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/update_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="更改大巴信息"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/update_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="更改宾馆信息"
                android:layout_weight="1"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/tv5"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:layout_width="fill_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            style="@android:style/ButtonBar"

            >
            <Button
                android:id="@+id/insert_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:onClick="insert_flight"
                android:text="增加航班信息"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/insert_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="增加大巴信息"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/insert_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="增加宾馆信息"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv0"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/qcust"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="查询客户足迹"
            />

    </LinearLayout>

</ScrollView>